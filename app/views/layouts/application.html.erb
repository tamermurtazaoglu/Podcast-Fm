<!DOCTYPE html>
<html>
  <head>
    <title>PodcastFm</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if alert %>
      <p class="alert">
        <%= alert %> 
      </p>
    <% elsif notice %>
      <p class="notice">
        <%= notice %>
      </p>
    <% end %>

    <%= yield %>
  </body>
</html>
