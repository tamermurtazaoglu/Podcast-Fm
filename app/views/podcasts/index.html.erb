
	
	<div id="banner">
		<h1>Discover your new favorite podcast</h1>
	</div>

	<div id="podcasts" class="cf">
		<div id="wrapper">
			<ul class="cf">
				<% @podcasts.each do |podcast| %>
					<%= link_to podcast do %>
						<li>
							<%= image_tag podcast.thumbnail.url(:medium) %>
							<!-- <img src="avatar.jpg" alt="Narwhals Podcast"> -->
							<div class="podcast_overview">
								<h2><%= podcast.title %></h2>
								<p class="episode_count">1 episode</p>
							</div>
						</li>					
					<% end %>
				<% end %>
			</ul>
			<%= will_paginate @podcasts, previous_label: "Previous", next_label: "Next" %>
		</div>
	</div>
